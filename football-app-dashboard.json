{
  "dashboard": {
    "title": "Football Introduction App Dashboard",
    "tags": ["football-app", "nginx", "kubernetes"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Total HTTP Requests",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(nginx_http_requests_total{app=\"football-intro-app\"}[5m])",
            "legendFormat": "{{pod}} - Requests/sec"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "nginx_connections_active{app=\"football-intro-app\"}",
            "legendFormat": "{{pod}} - Active"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "HTTP Response Codes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(nginx_http_requests_total{app=\"football-intro-app\",status=~\"2..\"}[5m])",
            "legendFormat": "2xx Success"
          },
          {
            "expr": "rate(nginx_http_requests_total{app=\"football-intro-app\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error"
          },
          {
            "expr": "rate(nginx_http_requests_total{app=\"football-intro-app\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error"
          }
        ]
      },
      {
        "id": 4,
        "title": "Pod CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"football-intro-app.*\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Pod Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{pod=~\"football-intro-app.*\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Request Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nginx_http_request_duration_seconds_bucket{app=\"football-intro-app\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(nginx_http_request_duration_seconds_bucket{app=\"football-intro-app\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      }
    ]
  }
}